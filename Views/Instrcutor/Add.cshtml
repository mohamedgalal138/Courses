@model AppUser
@{
    ViewData["Title"] = "Add";
}

<h1>Add New Instrcutor</h1>
<div class=" row">
    <div class="col-md-6">
        <form asp-action="Add" method="post" class="row">

            <div class="form-floating mb-3">
                <input class="form-control" asp-for="FullName" aria-required="true" autocomplete="Full Name" placeholder="Full Name" />
                <label asp-for="FullName"></label>
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="PhoneNumber" placeholder="Phone Number" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-floating mb-3">
               
                <input class="form-control" asp-for="Email" placeholder="Email" />
                <label asp-for=Email></label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-floating mb-3">
                
                <input class="form-control" asp-for="PasswordHash" type="password" placeholder="PassWord" name="PassWord" />
                <label asp-for="PasswordHash">PassWord</label>
                <span asp-validation-for="PasswordHash"></span>
            </div>
            <div class="form-floating mb-3">
              
                <input class="form-control" placeholder="Age" type="number" name="Age" />
                <label> Age</label>
                @*  <span asp-validation-for="Name"></span> *@
            </div>

            <div>
                <input type="submit" value="Save" class="w-25  btn btn-success" />
            </div>

        </form>
        <a asp-action="index" class=" w-25 btn btn-primary mt-3">Back</a>


    </div>
</div>
